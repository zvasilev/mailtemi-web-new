---
import Icon from "node_modules/astro-icon/components/Icon.astro";
const { feature_list } = Astro.props;
---

<astro>
  <div class="key-feature-grid mt-10 grid grid-cols-2 gap-7 md:grid-cols-3 xl:grid-cols-4">
    {feature_list.map((item, i) => (
      <div class="flex flex-col justify-between rounded-lg bg-white p-5 shadow-lg">
        <div>
              <h3 class="h4 text-xl lg:text-2xl">{item.title}</h3>
              <p>{item.content}</p>
            </div>
            <span class="icon mt-4">
              <Icon name={item.icon} class="icon" />
            </span>
      </div>
    ))}
      
   
  </div>
</astro>
