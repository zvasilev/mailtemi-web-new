---
import config from "@/config/config.json";

const {
  call_to_action: { title, description, buttons = [] },
} = config;
---

<section class="px-5 py-20 xl:py-[120px]">
  <div class="container">
    <div
      class="bg-gradient row justify-center rounded-b-[80px] rounded-t-[20px] px-[30px] pb-[75px] pt-16"
    >
      <div class="lg:col-11">
        <div class="row">
          <div class="lg:col-7">
            <h2 class="h1 text-white">{title}</h2>
            {buttons && buttons.length > 0 && (
              <div class="mt-8 flex flex-col flex-wrap gap-4 sm:flex-row">
                {buttons.map(({ label, link }, idx) => (
                  <a
                    class="btn btn-white inline-flex items-center gap-2"
                    href={link}
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={label}
                  >
                    {link.includes("apple.com") && (
                      <img src="/images/icons/apple.svg" alt="Apple" class="h-5 w-5" />
                    )}
                    {link.includes("play.google") && (
                      <img src="/images/icons/android.svg" alt="Android" class="h-5 w-5" />
                    )}
                    {label}
                  </a>
                ))}
              </div>
            )}
          </div>
          <div class="mt-8 lg:col-5 lg:mt-0">
            <p class="text-white">
              {description}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
